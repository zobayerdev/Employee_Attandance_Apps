<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EmployeeManagementSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.EmployeeManagementSystem" parent="Base.Theme.EmployeeManagementSystem" />

    <!-- ProgressBar. -->
    <style name="ProgressBar">
        <item name="colorSecondary">@color/yellow</item>
    </style>

    <!--navigation-->
    <style name="poppins" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <!--sliding in and out-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>